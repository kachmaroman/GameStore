@using System.Web.Optimization

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/Scripts")
</head>
<body>
    <div class="wrapper">
        <div class="content">
            <header>
                <div class="container">
                    <div class="headFlex">
                        <div class="logotype">
                            <a href="@Url.Action("Index", "Home")"><img class="logo" src="~/Content/img/logo.png" alt=""></a>
                        </div>
                        <div class="info">
                            <div class="search-box">
                                <input type="text" id="keyword" class="search transition" maxlength="100" placeholder="Search" onkeydown="enterHandler(event)" />
                                <span class="search-icon"><i class="fa fa-search" onclick="search()"></i></span>
                                <div class="clearfix"></div>
                            </div>
                            <div class="shopping-cart">
                                @Html.Action("Summary", "Cart")
                            </div>
                        </div>
                    </div>
                </div>

                <nav class="navbar mainNav" role="navigation">
                    <div class="container">
                        <div class="navbar-header" data-toggle="collapse" data-target="#header-nav" style="width: 100%">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#header-nav">
                                <i class="fa fa-bars" aria-hidden="true"></i>
                            </button>
                            <div class="navbar-brand">Menu</div>
                        </div>
                        <div class="collapse navbar-collapse" id="header-nav">
                            <ul class="nav navbar-nav">
                                <li class="@Html.IsActive("Home", "Index")">@Html.ActionLink("Home", "Index", "Home")</li>
                                <li class="@Html.IsActive("Game", "Catalog")">@Html.ActionLink("Games", "Catalog", "Game")</li>
                                <li class="@Html.IsActive("Home", "About")">@Html.ActionLink("About", "About", "Home")</li>
                            </ul>
                        </div>
                    </div>
                </nav>
                <div class="container">
                    @RenderSection("carousel", required: false)
                </div>
            </header>
            <main>
                @RenderBody()
            </main>
        </div>
        <footer>
            <p>Powered By <a href="https://www.facebook.com/msnGOmsn" title="Roman Kachmar" target="_blank">Roman Kachmar</a><br>© @DateTime.Now.Year <b>GameStop</b> </p>
        </footer>
    </div>
</body>
</html>