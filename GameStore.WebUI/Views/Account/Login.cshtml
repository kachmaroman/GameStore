@model GameStore.Domain.Entities.Administrator

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Sign in to access Admin Panel</h1>
            <div class="account-wall">
                <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                     alt="">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-signin" }))
                {
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.AntiForgeryToken()

                    @Html.TextBoxFor(m => m.Login, new { @class = "form-control", placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.Login, "", new { @class = "text-danger" })

                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
                }
            </div>
        </div>
    </div>
</div>


